{
  "name": "admin-portal-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "yarn fixiview && vue-cli-service serve",
    "build": "yarn fixiview && vue-cli-service build",
    "lint": "vue-cli-service lint --no-fix && yarn lint:css",
    "lint:css": "stylelint '**/*.vue' --syntax less",
    "test:e2e": "vue-cli-service test:e2e",
    "test:unit": "vue-cli-service test:unit",
    "mock": "nodemon --experimental-modules --no-warnings mock/index.mjs",
    "newcomp": "node --experimental-modules --no-warnings tools/newcomp.mjs",
    "newpage": "node --experimental-modules --no-warnings tools/newpage.mjs",
    "newpart": "node --experimental-modules --no-warnings tools/newpart.mjs",
    "newdlg": "node --experimental-modules --no-warnings tools/newdlg.mjs",
    "uproute": "node --experimental-modules --no-warnings tools/uproute.mjs",
    "fixiview": "node --experimental-modules --no-warnings tools/fixiview.mjs"
  },
  "dependencies": {
    "@types/mockjs": "^1.0.2",
    "axios": "^0.18.0",
    "iview": "^3.1.5",
    "lodash": "^4.17.11",
    "mockjs": "^1.0.1-beta3",
    "moment": "^2.22.2",
    "vue": "^2.5.17",
    "vue-class-component": "^6.3.2",
    "vue-property-decorator": "^7.2.0",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.0",
    "@types/mocha": "^5.2.4",
    "@types/qs": "^6.5.1",
    "@vue/cli-plugin-babel": "^3.1.1",
    "@vue/cli-plugin-e2e-cypress": "^3.1.2",
    "@vue/cli-plugin-typescript": "^3.1.1",
    "@vue/cli-plugin-unit-mocha": "^3.1.1",
    "@vue/cli-service": "^3.1.4",
    "@vue/test-utils": "^1.0.0-beta.20",
    "chai": "^4.1.2",
    "colors": "^1.3.2",
    "globby": "^8.0.1",
    "html-webpack-plugin": "^3.2.0",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "lint-staged": "^7.2.2",
    "mkdirp": "^0.5.1",
    "prompt-promise": "^1.0.3",
    "shell-exec": "^1.0.2",
    "stylelint": "^9.8.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-processor-arbitrary-tags": "^0.1.0",
    "typescript": "^3.0.0",
    "vue-template-compiler": "^2.5.17"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "yarn lint:css",
      "git add"
    ]
  }
}
